{
  "crons": [
    {
      "path": "/api/cron/send-3day-follow-up-emails",
      "schedule": "0 11 * * *"
    },
    {
      "path": "/api/cron/send-email-reminders",
      "schedule": "0 11 * * *"
    }
  ],
  "functions": {
    "app/api/account/deletion-request/route.js": {
      "maxDuration": 30
    },
    "app/api/cron/send-3day-follow-up-emails/route.js": {
      "maxDuration": 60
    },
    "app/api/cron/send-email-reminders/route.js": {
      "maxDuration": 60
    }
  },
  "rewrites": [
    {
      "source": "/api/auth/callback",
      "destination": "/api/auth/callback"
    }
  ]
}
